@import "../../app.wxss";
.images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.img-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}
.img-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.img-item button {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
}
.img-item.add {
  border: 2rpx dashed #c9c9c9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999999;
}
.img-item.add .plus {
  font-size: 80rpx;
  line-height: 1;
}
.content-summary {
  min-height: 80rpx;
  padding: 12rpx;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  color: #666666;
  background-color: #fafafa;
  position: relative;
  overflow: hidden;
}
.content-summary .placeholder {
  color: #999999;
}
.summary-rich {
  max-height: 200rpx;
  overflow: hidden;
}
.summary-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(180deg, rgba(250,250,250,0) 0%, rgba(250,250,250,1) 100%);
}
.modal {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.modal-content {
  width: 92vw;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
}
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.icon-btn.close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  color: #666;
  border: 1px solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-tabs {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}
.segmented {
  display: flex;
  gap: 0;
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.seg-btn {
  flex: 1;
  padding: 16rpx 0;
  background-color: #fff;
  color: #333;
}
.seg-btn.active {
  background-color: #1677ff;
  color: #ffffff;
}
.tab-btn.active {
  background-color: #1677ff;
  color: #ffffff;
}
.modal-textarea {
  min-height: 360rpx;
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
}
.preview-area {
  min-height: 360rpx;
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  padding: 16rpx;
}
.weather-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}
.weather-pill {
  padding: 16rpx 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 24rpx;
  background: #ffffff;
  color: #333333;
}
.temp-input {
  flex: 1;
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  padding: 16rpx;
}
.modal-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}
.finish-btn {
  background-color: #1677ff;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}
