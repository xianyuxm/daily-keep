@import "../../app.wxss";
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #e6f7ff 0%, #ffffff 60%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 60rpx 32rpx;
}
.hero {
  text-align: center;
  margin-bottom: 40rpx;
}
.brand {
  font-size: 48rpx;
  font-weight: 700;
  color: #1677ff;
}
.subtitle {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666;
}
.card {
  width: 88%;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.12);
  padding: 32rpx;
}
.card-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.input {
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.primary-btn {
  background-color: #1677ff;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
  margin-top: 6rpx;
}
.ghost-btn {
  background-color: #ffffff;
  color: #1677ff;
  border: 1px solid #1677ff;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
  margin-top: 16rpx;
}
.footer {
  margin-top: 40rpx;
  color: #999;
  font-size: 24rpx;
}
