@import "../../app.wxss";
.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.calendar-header .left {
  display: flex;
  gap: 16rpx;
  align-items: center;
}
.calendar-header .right {
  display: flex;
  gap: 8rpx;
  align-items: center;
}
.nav-btn {
  min-width: 80rpx;
}
.month {
  font-size: 34rpx;
  font-weight: 600;
}
.month::after {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: #1677ff;
  border-radius: 50%;
  margin-left: 8rpx;
}
.login-btn {
  min-width: 100rpx;
}
.login-btn.danger {
  color: #ff4d4f;
}
.weekday-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  color: #789;
  margin-bottom: 8rpx;
}
.calendar-grid {
  display: grid;
  gap: 8rpx;
}
.week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}
.day {
  background-color: #ffffff;
  border: 1px solid #eaeaea;
  border-radius: 12rpx;
  height: 120rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  padding: 8rpx;
  color: #333;
}
.day .num {
  position: absolute;
  top: 8rpx;
  left: 10rpx;
  font-size: 28rpx;
}
.day .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #1677ff;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}
.day.has {
  border-color: #1677ff33;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.12);
}
.day.today {
  border-color: #52c41a;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.25);
}
.stats {
  margin-top: 16rpx;
  color: #555;
  text-align: center;
}
